<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/thumb_button_1"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kim"/>

                <ImageButton
                    android:id="@+id/thumb_button_2"
                    android:layout_weight="0.5"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/kim"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/thumb_button_3"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/suelgi" />

                <ImageButton
                    android:id="@+id/thumb_button_4"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/suelgi" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/thumb_button_5"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beenzino" />

                <ImageButton
                    android:id="@+id/thumb_button_6"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/beenzino" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/thumb_button_7"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shj" />

                <ImageButton
                    android:id="@+id/thumb_button_8"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/shj" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:padding="16dp">

                <ImageButton
                    android:id="@+id/thumb_button_9"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/js" />

                <ImageButton
                    android:id="@+id/thumb_button_10"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_weight="0.5"
                    android:scaleType="centerCrop"
                    android:src="@drawable/js" />
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible" />


</FrameLayout>